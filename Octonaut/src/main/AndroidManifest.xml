<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.justinlautner.octonaut">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name="com.justinlautner.octonaut.MainActivity"
            android:theme="@style/AppThemeFullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.justinlautner.octonaut.GameOver"
            android:theme="@style/AppThemeFullscreen">
        </activity>
        <activity
            android:name="com.justinlautner.octonaut.GameWin"
            android:theme="@style/AppThemeFullscreen" />
        <activity android:name="com.justinlautner.octonaut.FightForLife"
            android:theme="@style/AppThemeFullscreen">
        </activity>
    </application>

</manifest>